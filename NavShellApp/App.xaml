<Application x:Class="NavShellApp.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:wasm="http://platform.uno/wasm"
			 xmlns:utum="using:Uno.Toolkit.UI.Material"
			 xmlns:utu="using:Uno.Toolkit.UI"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="wasm">

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<!--  Load WinUI resources  -->
				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
				<MaterialToolkitTheme xmlns="using:Uno.Toolkit.UI.Material" />
			</ResourceDictionary.MergedDictionaries>

			<Style x:Key="NavFlyoutPresenterStyle"
		   TargetType="FlyoutPresenter"
		   BasedOn="{StaticResource LeftDrawerFlyoutPresenterStyle}">
				<Setter Property="CornerRadius" Value="0,20,20,0" />
				<Setter Property="utu:DrawerFlyoutPresenter.DrawerLength" Value="0.6*" />
			</Style>
		</ResourceDictionary>

		

	</Application.Resources>
</Application>
